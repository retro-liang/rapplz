<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Jersey Servlets -->
	<servlet>
		<servlet-name>Jersey Web Application</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>com.retro.rapplz.server.service.JerseyResource</param-value>
		</init-param>
		
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>Jersey Web Application</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<!-- Servlets -->
	<servlet>
		<servlet-name>initServlet</servlet-name>
		<servlet-class>com.retro.rapplz.server.InitServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>greetServlet</servlet-name>
		<servlet-class>com.retro.rapplz.server.GreetingServiceImpl</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/rapplz/greet</url-pattern>
	</servlet-mapping>	
	
	<!-- Default page to serve -->
	<welcome-file-list>		
		<welcome-file>index.html</welcome-file>		
	</welcome-file-list>

</web-app>